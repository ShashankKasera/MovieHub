<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_tv_show_episode"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:cardCornerRadius="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_tv_show_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/movie" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_seasons_date_tv_show_episode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="2021"
            android:textColor="@color/light_gray"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cv_tv_show_episode"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_seasons_name_tv_show_episode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Spencer"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cv_tv_show_episode"
            app:layout_constraintTop_toBottomOf="@+id/tv_seasons_date_tv_show_episode" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/cv_tv_show_episode"
            app:layout_constraintStart_toEndOf="@+id/cv_tv_show_episode">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_episode_count_tv_shoe_episode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:padding="4dp"

                        android:text="Action"
                        android:textColor="@color/light_gray"

                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_description_tv_show_episode_episode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_tv_show_episode" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>